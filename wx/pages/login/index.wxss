.container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.login-box {
  width: 80%;
  padding: 60rpx 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  position: relative;
  z-index: 1;
  color: #fff;
}

.bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  opacity: 0.15;
}

.bg-image {
  width: 100%;
  /* height: 100vh; */
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  /* opacity: 0.15; */
}

.logo {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 28rpx;
  color: #fff;
  margin-bottom: 60rpx;
}

.login-btn {
  width: 80% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #409EFF;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.login-btn:active {
  opacity: 0.9;
} 