.container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}

.login-box {
  width: 80%;
  padding: 60rpx 40rpx;
  background: #fff;
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.login-btn {
  width: 80% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #409EFF;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.login-btn:active {
  opacity: 0.9;
} 