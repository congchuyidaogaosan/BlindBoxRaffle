.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
  justify-content: flex-start;
}

/* 用户信息头部 */
.user-header {
  width: 100%;
  box-sizing: border-box;
  background: linear-gradient(135deg, #409EFF, #36D1DC);
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.user-info {
  display: flex;
  align-items: center;
  width: 100%;
  /* justify-content: space-between; */
  padding: 0 20rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  /* border-radius: 50%; */
  /* border: 4rpx solid rgba(255,255,255,0.4); */
}

.info {
  flex: 1;
  padding-left: 40rpx;
  color: #fff;
  display: flex;
  align-items: center;
  /* justify-content: flex-end; */
}
.avatar-wrapper{
  padding: 0;
  margin: 0;
  width: 150rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
}

.id {
  font-size: 24rpx;
  opacity: 0.8;
  margin-left: 16rpx;
}

.nickname-input {
  font-size: 36rpx;
  color: #FFF;
  font-weight: bold;
  margin-left: 50rpx;
}

/* 钱包卡片样式 */
.wallet-card {
  width: 100%;
  /* background: linear-gradient(135deg, #409EFF 0%, #36D1DC 100%); */
  border-radius: 16rpx;
  color: #fff;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}


.balance-info {
display: flex;
flex-direction: column;
}

.balance-info .label {
font-size: 24rpx;
opacity: 0.9;
margin-bottom: 10rpx;
}

.balance-info .amount {
font-size: 48rpx;
font-weight: bold;
}

.recharge-btn {
background: rgba(255, 255, 255, 0.2);
color: #fff;
border: 1rpx solid rgba(255, 255, 255, 0.5);
font-size: 28rpx;
padding: 12rpx 30rpx;
border-radius: 30rpx;
}
/* 数据统计 */
.stats {
  width: 100%;
  background: #fff;
  border-radius: 12rpx;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.stat-item {
  text-align: center;
}

.stat-item .num {
  font-size: 40rpx;
  font-weight: bold;
  color: #409EFF;
  display: block;
  margin-bottom: 8rpx;
}

.stat-item .label {
  font-size: 24rpx;
  color: #666;
}

/* 功能菜单 */
.menu-list {
  width: 100%;
  margin: 0 20rpx;
}

.menu-group {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.menu-item:not(:last-child) {
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-item .text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.menu-item .arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
  transform: rotate(45deg);
}

/* 点击效果 */
.menu-item:active {
  background: #f9f9f9;
} 