<view class="container">
  <view class="user-info">
    <image class="avatar" src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}" />
    <view class="info">
      <text class="nickname">{{userInfo.nickname || '未登录'}}</text>
      <text class="balance">余额: ￥{{userInfo.balance || '0.00'}}</text>
    </view>
  </view>
  
  <view class="menu-list">
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/user/orders">
      <text>我的订单</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/user/draws">
      <text>抽取记录</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/user/reviews">
      <text>我的评价</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="showRecharge">
      <text>充值</text>
      <text class="arrow">></text>
    </view>
  </view>
</view> 