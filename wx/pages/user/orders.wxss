.container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 标签栏样式 */
.tabs {
  width: 100%;
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  padding: 16rpx 0;
}

.tab-item.active {
  color: #409EFF;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #409EFF;
  border-radius: 2rpx;
}

/* 订单列表样式 */
.order-list {
  flex: 1;
  padding: 20rpx;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.order-status.warning {
  color: #E6A23C;
  background: #fdf6ec;
}

.order-status.success {
  color: #67C23A;
  background: #f0f9eb;
}

.order-status.default {
  color: #909399;
  background: #f4f4f5;
}

.order-content {
  display: flex;
  padding: 20rpx 0;
}

.style-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.style-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.style-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.series-name {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.style-price {
  font-size: 32rpx;
  color: #f56c6c;
  font-weight: bold;
}

/* 评论区域样式 */
.reviews-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.reviews-title {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.review-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.review-item:last-child {
  border-bottom: none;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.review-rating {
  display: flex;
  gap: 4rpx;
}

.review-rating .star {
  font-size: 24rpx;
  color: #ddd;
}

.review-rating .star.active {
  color: #ffd700;
}

.review-time {
  font-size: 24rpx;
  color: #999;
}

.review-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-actions {
  display: flex;
  gap: 16rpx;
}

.review-btn {
  font-size: 24rpx;
  color: #fff;
  background: #409EFF;
  border: none;
  padding: 8rpx 24rpx;
}

.cancel-btn {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  border: none;
  padding: 8rpx 24rpx;
}

/* 加载和空状态 */
.loading, .empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 评分弹窗样式 */
.review-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.rating-section {
  margin-bottom: 30rpx;
}

.rating-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.stars {
  display: flex;
  gap: 20rpx;
}

.star {
  font-size: 48rpx;
  color: #ddd;
  transition: color 0.3s;
}

.star.active {
  color: #ffd700;
}

.comment-section {
  margin-bottom: 30rpx;
}

.comment-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.comment-input {
  width: 100%;
  height: 200rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  text-align: center;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #409EFF;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
}

.submit-btn:active {
  opacity: 0.8;
} 