          wx:for="{{styleList}}" 
          wx:key="id"
          data-id="{{item.id}}"
          bindtap="handleDraw">
      <image src="{{item.imageUrl}}" mode="aspectFill" class="style-image" />
      <view class="info">
        <text class="name">{{item.name}}</text>
        <text class="price">ï¿¥{{item.price}}</text>
        <text class="probability">{{item.probability}}%</text>
      </view>
    </view>
  </view>
</view> 