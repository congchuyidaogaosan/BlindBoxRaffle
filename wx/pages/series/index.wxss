.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.search-box {
  padding: 16rpx 20rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  width: 100%;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  height: 64rpx;
  padding: 0 20rpx;
  border-radius: 8rpx;
}

.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
  height: 100%;
}

.search-btn {
  padding: 0 24rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
  background: #409EFF;
  border-radius: 0 8rpx 8rpx 0;
  margin-right: -20rpx;
}

.series-list {
  flex: 1;
  padding: 10rpx;
}

.series-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10rpx;
}

.series-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.series-item image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.info {
  padding: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.price {
  font-size: 32rpx;
  color: #f56c6c;
  font-weight: bold;
}

.loading, .no-data {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
} 