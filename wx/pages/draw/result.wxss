.container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.result {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.congrats {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.series-name {
  font-size: 28rpx;
  color: #666;
}

.style-card {
  width: 100%;
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
}

.style-image {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.style-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.style-name {
  font-size: 32rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.price {
  font-size: 36rpx;
  color: #f56c6c;
  font-weight: bold;
}

.actions {
  width: 100%;
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: 2rpx solid #409EFF;
}

.action-btn.primary {
  background: #409EFF;
  color: #fff;
}

.action-btn:not(.primary) {
  background: #fff;
  color: #409EFF;
}

.loading {
  text-align: center;
  color: #999;
  font-size: 28rpx;
} 