.container {
  padding: 20rpx;
}

.swiper-container {
  width: 100%;
  height: 400rpx;
  position: relative;
  margin-bottom: 30rpx;
}

.hot-swiper {
  width: 100%;
  height: 100%;
}

.swiper-item {
  width: 100%;
  height: 100%;
  position: relative;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.slide-info {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 20rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
  color: #fff;
}

.slide-name {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.slide-price {
  font-size: 28rpx;
  color: #f6c142;
}

.series-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.series-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.series-item image {
  width: 100%;
  height: 300rpx;
}

.series-item .info {
  padding: 20rpx;
}

.series-item .name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.series-item .desc {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
} 